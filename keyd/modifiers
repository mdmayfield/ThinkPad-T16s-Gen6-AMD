f23+leftshift+leftmeta = overload(copilotheld, layer(altgr))
rightmeta = overload(copilotheld, layer(altgr))
leftalt = layer(command)
rightalt = layer(command)
leftmeta = layer(option)
leftcontrol = layer(meta)
rightcontrol = overload(meta, rightcontrol)

[command:C]
left = A-left
right = A-right
up = A-up
down = A-down
backspace = A-backspace
delete = A-delete
tab = swapm(appswitch, A-tab)
h = M-h

[option:A]
left = C-left
right = C-right
up = C-up
down = C-down
backspace = C-backspace
delete = C-delete
tab = C-tab

[appswitch:A]
` = S-A-tab

[meta]
h = C-h

[command+option]
left = C-A-left
right = C-A-right
up = C-A-up
down = C-A-down
backspace = C-A-backspace
delete = C-A-delete
tab = C-A-tab
h = C-A-h

[copilotheld]
left = C-M-left
right = C-M-right
up = C-M-up
down = C-M-down
